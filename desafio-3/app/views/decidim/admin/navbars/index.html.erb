<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      Gestionar Menu
      <%= link_to 'New Navbar', new_navbar_path, class: "button tiny button--title" %>
    </h2>
  </div>
  <p id="notice"><%= notice %></p>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th>Label</th>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @navbars.each do |navbar| %>
            <tr>
              <td><%= navbar.label %></td>
              <td><%= navbar.url %></td>
              <td class="table-list__actions">
                <%= link_to "<span> Edit <i class='icon--pencil icon'></i></span>".html_safe, edit_navbar_path(navbar), :class => "action-icon action-icon--edit" %>
                <%= link_to '<span> View Details <i class="icon--eye icon"></i></span>'.html_safe, navbar, :class => "action-icon action-icon--preview"%>
                <%= link_to '<span> Delete <i class="icon--circle-x icon"></i></span>'.html_safe, navbar, :class => "action-icon action-icon--remove", method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  
</div>
