<div class="carousel-item <%= " active " if post.id==1 %>" data-bs-interval="10000">
  <div class="card mb-3">
    <div class="row justify-content-center">
      <div class="col-md-3">
        <img src="<%= post.image %>" alt="Imagen" class="img-fluid rounded-start">
      </div>

      <div class="col-md-6">
        <div class="card-body">
          <h5 class="mt-0">
            <%= post.title %>
          </h5>
          <p>
            <%= post.content %>
          </p>
          <div class="text-end d-flex flex-direction-row justify-content-end">
            <%= link_to "<i class='fa-solid fa-plus'></i>".html_safe, new_post_path,
            :class => "btn btn-outline-success d-none d-md-inline-block",
            :title => "Crear Publicacion",'data-toggle' => 'tooltip', 'data-placement' => 'bottom' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
