<!-- Inicio del menu -->
<nav class="navbar navbar-expand-md navbar-light bg-light">
    <div class="container-fluid">
        <!-- icono o nombre -->
        <a class="navbar-brand" href="#">
            <span class="text-success">MAGARDEN</span>
        </a>
        <!-- boton del menu -->

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- elementos del menu colapsable -->

        <div class="collapse navbar-collapse" id="navbars">
            <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                <% @navbars.each do |navbar| %>
                    <%= render navbar %>
                <% end %>
            </ul>

            <!--boton Informacion -->

            <form class="d-flex">
                <%= link_to "<i class='fa-solid fa-plus'></i>".html_safe, new_navbar_path,
                :class => "btn btn-outline-success d-none d-md-inline-block",
                :title => "Crear Navbar",'data-toggle' => 'tooltip', 'data-placement' => 'bottom' %>
            </form>


        </div>

    </div>
</nav>
